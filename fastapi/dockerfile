FROM python:3.11-slim

# 1️⃣ Thiết lập môi trường
ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PYTHONPATH=/fastapi

# 2️⃣ Đặt thư mục làm việc
WORKDIR /fastapi/app

# 3️⃣ Cài đặt các gói hệ thống cần thiết (chỉ một lần)
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    libpq-dev \
    && rm -rf /var/lib/apt/lists/*

# 4️⃣ Sao chép file requirements trước (tối ưu cache layer)
COPY requirements.txt .

# 5️⃣ Cài đặt dependencies Python (giả sử requirements.txt đã có fastapi/uvicorn, xóa dòng thừa)
RUN pip install --no-cache-dir -r requirements.txt

# 6️⃣ Sao chép toàn bộ project vào /fastapi
COPY . /fastapi/

# 7️⃣ Expose port
EXPOSE 8000

# 8️⃣ Lệnh khởi chạy
CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000"]